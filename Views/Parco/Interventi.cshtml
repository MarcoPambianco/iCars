@model CarDetailsViewModel;

<section class="dettagli-macchina">
    <div class="row">
        <div class="col-md-9">
            <h1>@Model.strMarca @Model.strModello (@Model.strTarga)</h1>
        </div>
        <div class="col-md-3 d-flex align-items-end">
                <a href="#" class="btn btn-warning btn-lg btn-block add-intervento">Nuovo intervento</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <p style="text-align: justify;">
                @foreach(InterventiViewModel intervento in @Model.lsInterventi){
                <div class="row">
                    <div class="col-md-3">@intervento.tipoIntervento.strDescrizione</div>
                    <div class="col-md-2">@intervento.DataToString(intervento.dataIntervento)</div>
                    <div class="col-md-2">Km @intervento.kilometriMacchina</div>
                    <div class="col-md-2">Durata @intervento.tipoIntervento.ToString()</div>
                    <div class="col-md-3">Prossimo controllo @intervento.GetProssimoControllo()</div>
                </div>
                <hr>
            }                
            </p>
        </div>
        <div class="col-md-3 d-flex align-items-end ">
            <aside class="MyAside">
                <img src="@Model.strImagePath" width="80">
                <div>KM: @Model.Kilometri</div>
                <div>Alimentazione: @Model.motorizzazione.alimentazione</div>
                <div>Potenza: @Model.motorizzazione.cavalli (@Model.motorizzazione.kw)</div>
            </aside>
        </div>
    </div>
</section>

